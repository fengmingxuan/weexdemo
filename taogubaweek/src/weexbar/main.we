<script>

    require('weex-components');
     require('./navbar.we')
     require('./joke_item.we')
    var stream = require('@weex-module/stream');
    var modal = require('@weex-module/modal');
    module.exports = {

     data:{
            refresh_display:'hide',
            jokeArray:[],
            test:'s-test',
            msg:'下拉刷新'
         },

        methods:{
            onrefresh:function(e){
                var self = this;
                self.msg = '下拉刷新';
